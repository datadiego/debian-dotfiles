#!/bin/bash

# Archivo de atajos (puedes editarlo)
KEYS="
  ATAJOS BSPWM (Esc para salir)

Básicos:
  Super + Return          Abrir terminal
  Super + w               Cerrar ventana
  Super + shift + e       Cerrar sesión
  Super + numero          Mover entre escritorios
  Super + shift + numero  Mover ventana activa a escritorio
  Super + flechas         Mover ventana activa
  Impr Pant               Captura de pantalla
  Super + p               Captura de pantalla

Aplicaciones:
  Super + d               Menu de aplicaciones
  Super + b               Navegador
  Super + a               ChatGPT

Configuración:
  Super + shift + p       Recargar polybar
  Super + escape          Recargar sxhkd
  Super + alt + q         Salir de bspwm
  Super + alt + r         Reiniciar bspwm
"

# Muestra con rofi si está disponible, sino usa dmenu.
if command -v rofi >/dev/null; then
    rofi -e "$KEYS"
else
    printf "%s\n" "$KEYS" | dmenu -l 20
fi
